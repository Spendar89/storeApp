@import "colors"

.form-header-div {
  .form-header {
    margin: 0;
    color: #333;
  }
}

.img-cell {
  .img-div {
    width: 80px;
    height: 45px;
    overflow: hidden;
    border: 1pt solid black;
    img {
      width: 100%;
      height: auto;
      position: relative;
      padding: 0;
    }
  }
}

// form validation styling
ul {
  list-style: none;
}


input:required:invalid, input:focus:invalid {
  border: 1px solid red;
}

input:required:valid, input:focus:valid {
  border: 1px solid green;
}

